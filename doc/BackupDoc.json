{
  "FIXED_FIELDS": [
    "<MODEL_ID>.Backup",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders.copyName",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders.src",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders.dest",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFoldersExclude",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles.copyName",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles.src",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles.dest",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives.zipName",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives.src",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives.output",
    "<MODEL_ID>.Backup.<JOB_NAME>.CheckPath"
  ],

  "EDITABLE_FIELDS": [
    "<MODEL_ID>",
    "<MODEL_ID>.Backup.<JOB_NAME>",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders.<INDEX>.copyName",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders.<INDEX>.src",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders.<INDEX>.dest",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFoldersExclude.<INDEX>",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles.<INDEX>.copyName",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles.<INDEX>.src",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles.<INDEX>.dest",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives.<INDEX>.zipName",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives.<INDEX>.src",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives.<INDEX>.output",
    "<MODEL_ID>.Backup.<JOB_NAME>.CheckPath"
  ],

  "EXAMPLE": {
    "<MODEL_ID>": {
      "Backup": {

        "<JOB_NAME_1>": {
          "CopyFolders": [
            {
              "copyName": "ProjectSource",
              "src": "$HOME/path/to/private/project",
              "dest": "$HOME/path/to/public/project"
            }
          ],
          "CopyFoldersExclude": [
            ".git/",
            ".github/",
            "*.log",
            "__pycache__/",
            ".venv/",
            "node_modules/"
          ],
          "CopyFiles": [
            {
              "copyName": "ConfigTemplate",
              "src": "$HOME/path/to/private/config-template.json",
              "dest": "$HOME/path/to/public/config.json"
            }
          ],
          "ZipArchives": [],
          "CheckPath": "$HOME/path/to/public/project"
        },

        "<JOB_NAME_2>": {
          "CopyFolders": [],
          "CopyFoldersExclude": [],
          "CopyFiles": [
            {
              "copyName": "ImportantDocument",
              "src": "$HOME/path/to/source/document.pdf",
              "dest": "$HOME/path/to/destination/document.pdf"
            }
          ],
          "ZipArchives": [
            {
              "zipName": "ArchiveOutput",
              "src": "$HOME/path/to/destination",
              "output": "$HOME/path/to/destination/archive.zip"
            }
          ],
          "CheckPath": "$HOME/path/to/destination"
        }

      }
    }
  },


  "DESCRIPTION": {
    "<MODEL_ID>": "Machine or system identifier (e.g. 10A6S1A600).",
    "<MODEL_ID>.Backup": "Container for all backup jobs for this model.",
    "<MODEL_ID>.Backup.<JOB_NAME>": "A named backup job definition.",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFolders": "List of folder copy operations.",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFoldersExclude": "Optional rsync exclude patterns applied to folder copies.",
    "<MODEL_ID>.Backup.<JOB_NAME>.CopyFiles": "List of individual file copy operations.",
    "<MODEL_ID>.Backup.<JOB_NAME>.ZipArchives": "Optional zip archive operations executed after copy steps.",
    "<MODEL_ID>.Backup.<JOB_NAME>.CheckPath": "Path that must exist for the job to be valid."
  }
}
